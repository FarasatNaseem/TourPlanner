<Window x:Class="TourPlannerFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlannerFrontend" 
        xmlns:view="clr-namespace:TourPlannerFrontend.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >

    <DockPanel>
        <Label FontSize="20" DockPanel.Dock="Top">
            <Bold>Tour Planner</Bold>
        </Label>
        <view:HeaderView DockPanel.Dock="Top" Margin="0 0 0 0" VerticalAlignment="Center"/>
        <view:SearchView DockPanel.Dock="Top" Margin="0 0 0 0" VerticalAlignment="Center"/>
        <view:TourListView HorizontalAlignment="Left"/>
    </DockPanel>
</Window>
