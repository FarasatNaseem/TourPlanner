<Window x:Class="TourPlanner.PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.PL"
        xmlns:view="clr-namespace:TourPlanner.PL.View"
        xmlns:viewmodel="clr-namespace:TourPlanner.BL.ViewModel;assembly=TourPlanner.BL" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <view:HeaderView DockPanel.Dock="Top" VerticalAlignment="Center"/>
        <view:SearchView DockPanel.Dock="Top" VerticalAlignment="Center"/>
        <view:TourView HorizontalAlignment="Left" DataContext="{Binding TourVM}"/>
        <view:TourLogView HorizontalAlignment="Left" DataContext="{Binding TourLogVM}"/>
    </DockPanel>
</Window>
